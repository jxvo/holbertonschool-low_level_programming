#include "holberton.h"

/**
 * print_diagonal - draws a diagonal line in the terminal
 * @n - numbers of times to print '\'
 * Return: void
 */

void print_diagonal(int n)
{
	int x, s;

	if (n > 0)
	{
		for (x = 0; x <= n; x++)
		{
			for (s = 0; s < n; s++)
			{
				_putchar(' ');
			}
			_putchar('\\');
			_putchar('\n');
		}
	}
	else
	{
		_putchar('\n');
	}
}
